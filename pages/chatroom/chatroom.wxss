.pageContainer{
  width:100%;
  height:100%;
  background-color: #F0F0F0;
}
.clear{
  clear:both;
}

.topArea{
  width:100%;
  padding-bottom:110px;
  background-color: #F0F0F0;
}

.selfMessage{
  float:right;
  width:100%;
  text-align: right;
  padding-top: 5px;
  margin-right: 5%;

}

.otherMessage{
  float:left;
  width:100%;
  padding-top: 5px;
  margin-left: 5%;
  color: black;
}

.selfMessage .nameInfo{
  font-size: 14px;
  width:100%;
  color:black;
}

.otherMessage .nameInfo{
  font-size: 12px;
  width:100%;
  color:#000000;
}


.detailMessage{
  font-size: 16px;
  width:100%;
  color:#2090fe;
  margin-top: 5px;
}

.bottomArea{
  height: 50px;
  width:100%;
  position:fixed;
  bottom:0px;
  border-top: 1px solid #2090fe;
}

.inputArea{
  text-align: center;
  width:60%;
  font-size:14px;
  border-width: medium;
  border-color: #2090fe;
  float: left;
  margin-top: 3%;
}

.message{
  background-color: white;
  width:100%;
  padding-left: 5%;
  height: 30px;

}

.sendButton{
  height: 30px;
  font-size: 14px;
  width:20%;
  color: white;
  background-color: #2090fe;
  float: right;
  margin-right: 5%;
  margin-top: 3%;
}